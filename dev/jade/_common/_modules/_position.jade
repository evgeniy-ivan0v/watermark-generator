- var positions = ['top-left', 'top-center', 'top-right', 'middle-left', 'middle-center', 'middle-right', 'bottom-left', 'bottom-center', 'bottom-right']
- var coords = ['x', 'y']
.position
	.position__header-wrapper
		h3.settings__row-title.position__header= local.rus.position_title 
		.switch
			ul.switch__list
				li.switch__item.single.active
				li.switch__item.tile
	.position-wrapper.single
		ul.position__list
			each item in positions
				li(class="position__item", data-position="#{item}")
		ul.coords__list
			each coord in coords
				li.coords__item
					label.coords__name
						span(class="coords__name_arrow #{coord}")
						span.coords__name_text= coord
					input(type="text", name="positionX", placeholder="0", class="coords__input", id="#{coord}-pos")
					.coords__arrows
						a(href="#").coords__arrow.arrow-up
						a(href="#").coords__arrow.arrow-down



